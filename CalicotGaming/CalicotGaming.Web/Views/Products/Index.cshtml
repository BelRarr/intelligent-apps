@model IEnumerable<CalicotGaming.Web.Models.Product>

@{
    ViewData["Title"] = "Product Catalog";
}


<h1>Our Product Catalog</h1>

<div class="search-bar search-bar-alignment">
    <p>What are you looking for?</p>
    <form method="post" action="@Url.Action("Search", "Products")">
        <input name="searchText" type="text" placeholder="Search..." style="width: 70%;">
        <button type="submit" style="width: 20%;">Search</button>
    </form>
</div>

<div class="product-catalog">

    @foreach (var product in Model)
    {
        <div class="product-card">
            <img src="@product.PhotoUrl" alt="@product.Name" class="product-image">
            <h2 class="product-name">@product.Name</h2>
            <p class="product-price">$@product.Price</p>
            <p class="product-description">@product.Description</p>
            <!--<div class="product-actions">
                <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary">Details</a>
                <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-secondary">Edit</a>
                <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-danger">Delete</a>
            </div>-->
        </div>
    }
</div>

